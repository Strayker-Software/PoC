<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
		RequestedThemeVariant="Dark"
        x:Class="GitGui.MainWindow"
        Title="GitGui">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="50" />
			<ColumnDefinition Width="500" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="50" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>
		<Button Grid.Column="0" Grid.Row="0" Click="ClickHandler">Click</Button>
		<TextBlock Grid.Column="1" Grid.Row="0" x:Name="message">This is text</TextBlock>
		<TextBlock Grid.Column="1" Grid.Row="1" x:Name="messageO">This is path</TextBlock>
		<TextBlock Grid.Column="1" Grid.Row="2" x:Name="error">Error</TextBlock>
	</Grid>
</Window>